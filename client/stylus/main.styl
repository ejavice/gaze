html
	font-family:"Georgia", serif

body
	background-color: #EDEDED

img
	height: 20%
	width: auto
#mainContainer
	margin-top: 25px
	width: 100%
	height: 100%
	float: left


#navContainer
	float: left
	width:15%

#container
	width: 80%
	float: left

.item
	height: auto
	height: auto
	margin: 0px
	float: left
	border-style: none
	border-width: 1px
	border-color: black

.image_container
	position: relative
	display: inline-block
	float: left
	margin: 0px auto
	border-color:black

.caption
	overflow: scroll
	position: absolute
	bottom: 50px
	left: 0
	width: 100%
	font-size: 130%
	padding-left: 5px
	padding-right: 5px
	opacity: 0
	color: #004276
	-webkit-transition: opacity 1s ease-out
	background-color: #EDEDED
	width: 98%

.image_container:hover .caption
	opacity: 0.9
	-webkit-transition: opacity 1s ease-in

.topicID
	color: red



