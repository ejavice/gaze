#mainContainer
	width: 100%
	height: 100%
	text-align: center

#container
	width: 100%


.item
	width: auto
	height: auto
	margin: 0px
	float: left

.caption .simple-caption
		margin-top: -100px
		background-color: black
		color: white
		display: block
		-webkit-transition: opacity 1s ease-out
		opacity: 0
		height: 0
		overflow: hidden
		margin-bottom: 90px

.caption:hover .simple-caption 
		opacity: 1
		height: auto
