html
	font-family:"Georgia", serif

body
	background-color: #EDEDED

#mainContainer
	margin-top: 25px
	width: 100%
	height: 100%


#navContainer
	float: left
	width:15%

#container
	width: 85%
	height: 800px
	float: left
	overflow: visible

.item
	height: auto
	height: auto
	margin: 2px
	float: left
	border-style: none
	border-width: 1px
	border-color: black

.image_container
	position: relative
	display: inline-block

.caption
	overflow: scroll
	position: absolute
	bottom: 50px
	left: 0
	width: 100%
	font-size: 300%
	padding-left: 5px
	padding-right: 5px
	opacity: 0
	color: #1C2040
	-webkit-transition: opacity 1s ease-out
	background-color: #6B6A6A
	width: 98%

.image_container:hover .caption
	opacity: 0.9
	-webkit-transition: opacity 1s ease-in


li
	color: #004276
	font-size: 110%
	padding-bottom: 10px
	padding-left: 30px
	width: 100px

li:hover
	color: black
	padding-left: 40px

#thanks
	margin-top: 50px
	margin-left: 33px
	font-size: 70%

#nyt_logo
	margin-top: -14px
	width: 100px
	height: auto

